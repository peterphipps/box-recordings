<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    android:id="@+id/activity_pair_box"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/light_grey">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/gap_normal"
                android:textSize="20dp"
                android:text="Model"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/text_paired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/gap_normal"
                android:gravity="right"
                android:layout_weight="1"
                android:text="Paired"
                android:textColor="@color/white"/>
        </LinearLayout>



        <TextView
            android:id="@+id/text_serial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/gap_normal"
            android:textSize="15dp"
            android:text="Serial"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/text_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/gap_normal"
            android:textSize="15dp"
            android:text="IP"
            android:textColor="@color/black"/>


        <Button
            android:id="@+id/pair_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pair"
            android:layout_margin="@dimen/gap_small"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:width="200dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="true"
            android:onClick="pairDevice"/>

        <Button
            android:id="@+id/show_recordings_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gap_small"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:text="View Recordings"
            android:onClick="viewRecordings"
            android:clickable="true"/>




    </android.support.v7.widget.LinearLayoutCompat>





</android.support.v7.widget.LinearLayoutCompat>